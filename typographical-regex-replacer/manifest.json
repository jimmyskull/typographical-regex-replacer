{
  "manifest_version": 2,
  "name": "Typographical regex replacer",
  "description": "Fix typography on web pages.",
  "version": "1",
  "options_page": "html/config.html",
  "browser_action": {
    "default_icon": {
      "19": "images/enabled.png"
    },
    "default_title": "click to disable typography replacement"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "images/icon128.png"
  }
}
